<div class="container py-5">

  <h1 class="text-center">你想對誰說幹話?</h1>

  <form method="POST" action="/">
    <fieldset class="electedArea row mt-2">

      {{#each profile}}
      <div class="form-group col-4">
        <div class="card h-100 border-white">
          <img src="{{this.image}}"
            alt="" style="height: 18rem">
          <div class="card-body mx-auto">
            <input class="form-check-input" type="radio" name="job" id="{{this.id}}" value="{{this.job_en}}" >
            <label class="form-check-label" for="{{this.id}}">{{this.job}}</label>
          </div>
        </div>
      </div>
      {{/each}}

      <div class="submitArea row mt-4 w-100 align-items-center">
        <div class=" m-auto">
          <button class="btn btn-success " type="submit">產生幹話</button>
        </div>

        <div class="col-10">
          <textarea class="form-control" rows="3"> {{trashWords}} </textarea>
        </div>

      </div>
    </fieldset>
  </form>
</div>